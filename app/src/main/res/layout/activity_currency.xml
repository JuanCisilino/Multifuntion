<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ActivityCurrency">


        <EditText
            android:id="@+id/usd"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_centerHorizontal="true"
            android:hint="Dollar"
            android:textColorHint="@color/colorTexto"
            android:textColor="@color/colorTexto"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/peso"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_below="@+id/submit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Peso"
            android:textColorHint="@color/colorTexto"
            android:textColor="@color/colorTexto"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/usd"
            android:onClick="click"
            android:text="USD  to PESO"
            tools:ignore="HardcodedText,OnClick" />

        <Button
            android:id="@+id/submit2"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/peso"
            android:onClick="click2"
            android:background="@color/colorPrimary"
            android:text="PESO to USD"
            tools:ignore="HardcodedText,OnClick" />

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/submit2"
            android:layout_marginTop="24dp"
            android:onClick="reset"
            android:background="@color/colorPrimary"
            android:text="RESET"
            tools:ignore="HardcodedText,OnClick" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:textColor="@color/colorTexto"
            android:text="1USD = 70.0 PESOS"
            tools:ignore="HardcodedText" />
    </RelativeLayout>