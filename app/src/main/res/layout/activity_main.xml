<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/MainActivity_Button_Calculator"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/calculator"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/MainActivity_Button_CurrencyConverter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/currency"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="220dp"/>

    <Button
        android:id="@+id/MainActivity_Button_QrReader"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/qrcode"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="150dp"/>





</RelativeLayout>